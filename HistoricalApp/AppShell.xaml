<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HistoricalApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HistoricalApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="HistoricalApp">

    <FlyoutItem Title="Login/Register" Icon="admin_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Admin" Icon="admin_icon.png">
        <ShellContent ContentTemplate="{DataTemplate local:AdminPage}" />
    </FlyoutItem>
</Shell>
