<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="HistoricalApp.Views.QuizEditorPopup"
    BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="10"
                             WidthRequest="400"
                             HeightRequest="500">
            <Label Text="Quiz Editor"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Entry Placeholder="Title"
                   Text="{Binding Title}" />
            <Entry Placeholder="Description"
                   Text="{Binding Description}" />
            <Entry Placeholder="Category (Battles, Events, Characters)"
                   Text="{Binding Category}" />
            <Entry Placeholder="Difficulty (Easy, Medium, Hard)"
                   Text="{Binding Difficulty}" />
            <Entry Placeholder="Points"
                   Keyboard="Numeric"
                   Text="{Binding Points}" />

            <HorizontalStackLayout HorizontalOptions="Center"
                                   Spacing="15"
                                   Margin="0,15,0,0">
                <Button Text="Save"
                        BackgroundColor="Green"
                        TextColor="White"
                        Clicked="OnSaveClicked" />
                <Button Text="Cancel"
                        BackgroundColor="Gray"
                        TextColor="White"
                        Clicked="OnCancelClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</toolkit:Popup>
