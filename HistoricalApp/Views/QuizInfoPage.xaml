<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HistoricalApp.Views.QuizInfoPage"
             BackgroundColor="#1e1e1e"
             Title="Quiz Info">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="15">

            <Label Text="{Binding Title}"
                   FontAttributes="Bold"
                   FontSize="28"
                   TextColor="#FFD700"
                   HorizontalOptions="Center" />

            <Label Text="{Binding Description}"
                   FontSize="16"
                   TextColor="White"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center" />

            <BoxView HeightRequest="1" Color="#444" />

            <Label Text="{Binding Category, StringFormat='Category: {0}'}"
                   TextColor="#ccc" FontSize="14" />

            <Label Text="{Binding Difficulty, StringFormat='Difficulty: {0}'}"
                   TextColor="#ccc" FontSize="14" />

            <Label Text="{Binding Points, StringFormat='Points: {0}'}"
                   TextColor="#ccc" FontSize="14" />

            <BoxView HeightRequest="1" Color="#444" />

            <Button Text="Start Quiz"
                    BackgroundColor="#007bff"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="50"
                    Command="{Binding StartQuizCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
