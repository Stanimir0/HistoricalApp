<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:HistoricalApp.ViewModels"
             x:Class="HistoricalApp.Views.QuizSelectionPage"
             BackgroundColor="#1e1e1e"
             Title="Quizzes">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="{Binding CategoryTitle}"
                   FontSize="26"
                   TextColor="#FFD700"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <!-- "No quizzes" message -->
            <Label Text="No quizzes found in this category."
                   FontSize="16"
                   TextColor="#888"
                   HorizontalOptions="Center"
                   IsVisible="{Binding HasNoQuizzes}" />

            <CollectionView ItemsSource="{Binding Quizzes}"
                            IsVisible="{Binding HasQuizzes}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#2d2d2d"
                               BorderColor="#444"
                               CornerRadius="12"
                               Padding="15"
                               Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontSize="20" TextColor="White" />
                                <Label Text="{Binding Description}" FontSize="14" TextColor="#ccc" />
                                <Label Text="Points: {Binding Points}" FontSize="12" TextColor="#aaa" />
                                <Button Text="View Info"
                                        BackgroundColor="#007bff"
                                        TextColor="White"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:QuizSelectionViewModel}}, Path=SelectQuizCommand}"
                                        CommandParameter="{Binding .}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
